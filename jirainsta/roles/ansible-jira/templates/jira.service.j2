[Unit]
Description=Atlassian Jira Service
After=syslog.target network.target
   
[Service]
Type=forking
User={{ jira_user }}
Group={{ jira_user_group }}
Environment=JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.242.b07-1.el6_10.x86_64
ExecStart={{ jira_user_home_dir }}/jira//bin/start-jira.sh
ExecStop={{ jira_user_home_dir }}/jira/bin/stop-jira.sh
   
[Install]
WantedBy=multi-user.target
